#include <iostream>

#include <time.h>
using namespace std;

int main()
{
    int n;
    char wybor;

    do{
    system("CLS");
    srand(time(NULL));
    n = rand()%6+1;//liczba z zakresu 1-5 +1 czyli od 1 do 6;

    cout<<"Wylosowana liczba to: "<<n<<endl;
    cout<<"Czy chcesz wylosowac jeszcze raz? (y/n): ";
    cin>>wybor;

    }while(wybor == 'y');

    return 0;
}
